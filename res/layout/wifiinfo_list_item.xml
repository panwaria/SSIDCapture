<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifiinfo_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="3dip"
    android:paddingBottom="3dip" >
    
    <TextView android:id="@+id/wifiinfo_ssid_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:textColor="@color/default_background_color"
        android:text="@string/ssid_label"
        android:textStyle="bold" />
    
    <TextView android:id="@+id/wifiinfo_freq_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:textColor="@color/default_background_color"
        android:text="@string/freq_label"
        android:textStyle="bold" />
    
    <TextView android:id="@+id/wifiinfo_mac_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/wifiinfo_ssid_label"
        android:textSize="12sp"
        android:textColor="@color/default_background_color"
        android:text="@string/mac_label"
        android:textStyle="bold" />
    
    <TextView android:id="@+id/wifiinfo_signal_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/wifiinfo_freq_label"
        android:textSize="12sp"
        android:textColor="@color/default_background_color"
        android:text="@string/signal_label"
        android:textStyle="bold" />

</RelativeLayout>
